{
	"name": "mop",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=22"
	},
	"volta": {
		"node": "22.17.1"
	},
	"scripts": {
		"start": "cross-env WATCH=1 make devmode",
		"build": "make host",
		"format": "npm run lint:fix && npm run prettier:fix",
		"lint": "npm run lint:js && npm run lint:css",
		"lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
		"lint:js": "npx eslint \"./ui/**/*.{js,jsx,ts,tsx}\"",
		"lint:js:fix": "npm run lint:js -- --fix",
		"lint:css": "stylelint \"./ui/**/*.scss\"",
		"lint:css:fix": "npm run lint:css -- --fix",
		"lint:json": "npx eslint \"./{ui,jsonschema}/**/*.json\"",
		"lint:json:fix": "npm run lint:json -- --fix",
		"prettier": "npx prettier \"./ui/**/*.{js,jsx,ts,tsx,scss,css,json}\" --check",
		"prettier:fix": "npm run prettier -- --write",
		"type-check": "tsc --noEmit",
		"test:locales": "npx ajv-cli validate --errors=text -s ./schemas/translation.schema.json -d \"./assets/locales/**/*.json\""
	},
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"@types/golang-wasm-exec": "^1.15.2",
		"@types/pako": "^2.0.0",
		"apexcharts": "^4.5.0",
		"bootstrap": "^5.3.7",
		"chart.js": "^4.5.0",
		"clsx": "^2.1.1",
		"i18next": "^25.3.2",
		"i18next-browser-languagedetector": "^8.2.0",
		"i18next-http-backend": "^3.0.2",
		"pako": "^2.0.4",
		"tippy.js": "^6.3.7",
		"tsx-vanilla": "^1.2.0",
		"uuid": "^11.1.0",
		"yalps": "^0.5.6"
	},
	"devDependencies": {
		"@bufbuild/buf": "1.55.1",
		"@namics/stylelint-bem": "^10.1.0",
		"@protobuf-ts/plugin": "2.9.1",
		"@protobuf-ts/plugin-framework": "2.9.0",
		"@protobuf-ts/protoc": "2.9.1",
		"@protobuf-ts/runtime": "2.9.1",
		"@types/bootstrap": "^5.2.10",
		"@types/eslint": "^8.56.10",
		"@types/minimist": "^1.2.5",
		"@types/node": "^22.0.0",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"glob": "^11.0.3",
		"http-server": "14.1.1",
		"postcss-scss": "^4.0.9",
		"prettier": "3.6.2",
		"sass": "^1.64.2",
		"stylelint": "^16.22.0",
		"stylelint-prettier": "^5.0.3",
		"stylelint-scss": "^6.12.1",
		"stylelint-selector-bem-pattern": "^4.0.1",
		"terser": "^5.43.1",
		"typescript": "5.4.5",
		"typescript-formatter": "^7.2.2",
		"vite": "^7.0.5",
		"vite-plugin-checker": "^0.8.0",
		"vite-plugin-i18next-loader": "^3.1.2",
		"vite-plugin-stylelint": "^6.0.2"
	}
}
